      </ul>
    </div>

  </div>

  <div class="story_content mt-1 pb-2">
    {{#each combined}}
            {{#each this.news}}
    <div class="container">
      <span class="title_story">Câu Chuyện</span>
      <div class="title_News ml-2"><i class="fa-solid fa-bahai"></i> {{this.titleNews}}</div>
      <div class="row mt-4">
        <div class="col-xl-6 align-self-center">
          <span class="text_story_content">
            {{this.postNews}}
          </span>
        </div>
        <div class="col-xl-6 align-items-center">
          <img src="{{this.imageNews}}" alt="{{this.nameNews}}" class="img_story">
          <p class="rotage_r rotage_r_story"></p>
          <p class="tille_news text-center m-auto">{{this.nameNews}}</p>
        </div>
      </div>
    </div>
{{/each}}
{{/each}}

</div>


<form id="hidden-form" action="/create" method="post" style="display: none;">
 
</form>

<script>
document.getElementById('link').addEventListener('click', function(event) {
  event.preventDefault();
  var form = document.getElementById('hidden-form');
  form.submit();
});
</script>