        <div id="home" class="container tab-pane active"><br>
          <h3 class="tx_02">Ăn Nhanh</h3>
          <div class="row">
           


            {{#each combined}}
            {{#each this.foods}}
            {{#if (eq this.cate "fast")}}
           <div class="col-xl-3 mt-2">
              <div class="cd_01 card" style="width:100%">
                <img class="card-img-top image_food" src="{{this.imageFood}} " alt="{{this.nameFood}}">
                <div class="cb_01 card-body">
                  <h4 class="card-title tx_fo">{{this.nameFood}}</h4>
                  <p class="ct_1 card-text">{{this.titleFood}} </p>
                  <p class="ct_2 card-text">{{this.price}} VND</p>
                  <a href="#" class="btn buy_now stretched-link">Đặt mua ngay</a>
                </div>
              </div>
            </div>
            {{/if}}
            {{/each}}
            {{/each}}
            
          </div>
        </div>
