<div class="search_admin">
    <form action="">
        <input type="search" name="q" id="searchInput" class="ip_search_admin" placeholder="search">
        <button type="submit" class="btn_search_admin"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</div>
<table class="table table_admin">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox"> Chọn tất cả
            </th>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">
               
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each slides}}
        <tr>
            <th scope="row">
                <input type="checkbox"> 
            </th>
            <td class="content_admin">{{this.nameSlide}}</td>
            <td class="content_admin">{{this.titleSlide}}</td>
            <td class="content_admin">
                <button class="btn_ud_admin" data-id="{{this._id}}" data-toggle="modal"
                    data-target="#restoreSlide{{this._id}}">
                   <i class="fa-solid fa-window-restore"></i>
                </button>
                <button class="btn_ud_admin" data-id="{{this._id}}" data-toggle="modal"
                    data-target="#deleteSlides{{this._id}}">
                    <i class="fa-solid fa-trash-can-arrow-up"></i>
                </button>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="7" class="content_admin">
                Chưa có slide nào trong thùng rác ...
            </td>
        </tr>
        {{/each}}

         {{#each slides}}
        <div class="modal fade" id="restoreSlide{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Restore Slide: {{this.username}} ???</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="slides/{{this._id}}/restore?_method=PATCH">
                        <div class="btn_delete float-right">
                            <button type="submit" class="btn btn-danger">Restore</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div> 
        {{/each}}
         {{#each slides}}
        <div class="modal fade" id="deleteSlides{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Slides ???</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="Slides/{{this._id}}?_method=DELETE">
                        <div class="btn_delete float-right">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
        {{/each}}

    </tbody>
</table>