<div class="search_admin">
    <form action="">
        <input type="search" name="q" id="searchInput" class="ip_search_admin" placeholder="search">
        <button type="submit" class="btn_search_admin"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</div>

<table class="table table_admin">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox">
            </th>
            <th scope="col">STT</th>
            <th scope="col">User name</th>
            <th scope="col">Password</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each accounts}}
        <tr>
            <th scope="row">
                <input type="checkbox">
            </th>
            <td class="content_admin">{{sum @index 1}}</td>
            <td class="content_admin">{{this.username}}</td>
            <td class="content_admin">{{this.password}}</td>
            <td class="content_admin">{{this.email}}</td>
            <td class="content_admin">{{this.role}}</td>
            <td class="content_admin">
                <button class="btn_ud_admin btn-restore" data-id="{{this._id}}" data-toggle="modal"
                    data-target="#restoreAccount{{this._id}}">
                    <i class="fa-solid fa-window-restore"></i>
                </button>
                <button class="btn_ud_admin" 
                data-id="{{this._id}}" data-toggle="modal"
                    data-target="#deleteAccount{{this._id}}">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="7" class="content_admin">
                Chưa có tài khoản nào ...
            </td>
        </tr>
        {{/each}}
         {{#each accounts}}
        <div class="modal fade" id="restoreAccount{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Restore account: {{this.username}} ???</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="account/{{this._id}}/restore?_method=PATCH">
                        <div class="btn_delete float-right">
                            <button type="submit" class="btn btn-danger">Restore</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
        {{/each}}
       
        {{#each accounts}}
        <div class="modal fade" id="deleteAccount{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete account ???</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="account/{{this._id}}?_method=DELETE">
                        <div class="btn_delete float-right">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
        {{/each}}

    </tbody>
</table>


